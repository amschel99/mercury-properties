generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model RenterApplication {
  id            String   @id @default(cuid())
  fullName      String
  phone         String
  location      String
  budgetRange   String
  requirements  String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model LandlordApplication {
  id              String   @id @default(cuid())
  fullName        String
  phone           String
  propertyType    String
  location        String
  message         String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}
